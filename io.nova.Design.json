{
  "app-id": "io.nova.Design",
  "runtime": "org.gnome.Platform",
  "runtime-version": "46",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command": "nova-design",
  "finish-args": [
    "--share=network",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--filesystem=home",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-download"
  ],
  "build-options": {
    "append-path": "/usr/lib/sdk/rust-stable/bin",
    "build-args": [
      "--share=network"
    ],
    "env": {
      "RUST_BACKTRACE": "1"
    }
  },
  "modules": [
    {
      "name": "nova-design",
      "buildsystem": "simple",
      "build-commands": [
        "cargo --offline fetch --manifest-path Cargo.toml --verbose",
        "cargo --offline build --release --verbose",
        "install -Dm755 ./target/release/nova-app -t /app/bin/",
        "ln -s /app/bin/nova-app /app/bin/nova-design",
        "install -Dm644 flatpak/io.nova.Design.desktop -t /app/share/applications/",
        "install -Dm644 flatpak/io.nova.Design.metainfo.xml -t /app/share/metainfo/"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        },
        "cargo-sources.json"
      ]
    }
  ]
}